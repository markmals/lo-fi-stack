{
    "private": true,
    "sideEffects": false,
    "scripts": {
        "dev": "run-p dev:*",
        "storybook": "npm run storybook:dev",
        "format": "prettier --write .",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
        "test": "vitest",
        "typecheck": "tsc",
        "build": "run-s build:css build:routes build:remix",
        "clean": "git clean -fdX .",
        "start": "remix-serve build",
        "deploy": "fly deploy --remote-only",
        "dev:remix": "remix dev",
        "build:remix": "remix build",
        "dev:routes": "remix-routes -w",
        "build:routes": "remix-routes",
        "dev:css": "postcss app/components/**/*.css styles --dir app/styles -w",
        "build:css": "postcss app/components/**/*.css styles --dir app/styles --env production",
        "storybook:dev": "start-storybook -p 6006",
        "storybook:build": "build-storybook",
        "static:build": "wget -r -k -nH -i static-build-urls.txt -P docs; touch docs/.nojekyll",
        "static:serve": "serve docs",
        "prepare": "husky install"
    },
    "resolutions": {
        "react": "npm:@preact/compat",
        "react-dom": "npm:@preact/compat"
    },
    "dependencies": {
        "@remix-run/node": "*",
        "@remix-run/react": "*",
        "@remix-run/serve": "*",
        "firebase": "^9.14.0",
        "firebase-admin": "^11.3.0",
        "holocron-db": "^0.1.2",
        "preact": "*",
        "preact-render-to-string": "*",
        "react": "npm:@preact/compat",
        "react-dom": "npm:@preact/compat",
        "remix-routes": "*"
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.4.0",
        "@remix-run/dev": "*",
        "@remix-run/eslint-config": "*",
        "@storybook/addon-essentials": "^6.5.13",
        "@storybook/addon-interactions": "^6.5.13",
        "@storybook/addon-links": "^6.5.13",
        "@storybook/builder-vite": "^0.2.5",
        "@storybook/core-server": "^6.5.13",
        "@storybook/preact": "^6.5.13",
        "@storybook/testing-library": "^0.0.13",
        "@testing-library/dom": "^8.19.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/preact": "^3.2.2",
        "@types/postcss-import": "^14.0.0",
        "autoprefixer": "^10.4.13",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "happy-dom": "^7.7.0",
        "husky": "^8.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.19",
        "postcss-cli": "^10.0.0",
        "postcss-import": "^15.0.0",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.0",
        "prettier-plugin-organize-imports": "^3.2.1",
        "prettier-plugin-tailwindcss": "^0.2.0",
        "remix-flat-routes": "^0.4.8",
        "serve": "^14.1.2",
        "tailwindcss": "^3.2.4",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "vite-tsconfig-paths": "^3.6.0",
        "vitest": "^0.25.3"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "singleQuote": false,
        "semi": false,
        "arrowParens": "avoid"
    }
}
